<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context="com.example.genesissy.coffe.Results">


    <RelativeLayout
        android:padding="20dp"
        android:background="#DC143C"
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/cup"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/f"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true" />
        <LinearLayout
            android:id="@+id/welcome_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignTop="@+id/cup">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:textColor="#7FFF00"
                android:textAllCaps="true"
                android:text="Welcome To Cofee Shop"
                android:gravity="center"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/check_Order"
            android:layout_below="@id/welcome_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/Check_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check Out Oder"
                android:textColor="#D2691E"
                android:textSize="24sp"
                android:gravity="center"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/Contact_Header"
            android:layout_below="@id/check_Order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact No:"
                android:textSize="24sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/you_oder"
            android:layout_width="match_parent"
            android:layout_below="@id/Contact_Header"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/you_have_oder"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="You Have Oder:"
                android:textSize="24sp"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Items:"
                android:textSize="24sp"
                android:layout_marginLeft="290dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_below="@id/you_oder"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iterm Name:"
                android:textSize="24sp"
                android:layout_marginLeft="15dp"/>


        </LinearLayout>
        <TextView
            android:id="@+id/Item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ffffff"
            android:textSize="24dp"
            android:layout_alignBottom="@+id/name"
            android:layout_centerHorizontal="true" />

      <TextView
          android:layout_marginTop="10dp"
          android:id="@+id/Itename_Two"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text=""
          android:textSize="24dp"
          android:layout_centerHorizontal="true"
          android:layout_below="@id/Item_name"/>


        <TextView
            android:layout_below="@id/check_Order"
            android:id="@+id/Get_Contact"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cellnomber"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_marginLeft="220dp"/>


        <TextView
            android:layout_marginTop="14dp"
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="24sp"
            android:layout_below="@id/you_oder"
            android:layout_marginLeft="480dp" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/number_Two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="24sp"
            android:layout_below="@id/number"
            android:layout_marginLeft="480dp" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/ToTal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOTAL"
            android:textSize="24sp"
            android:layout_below="@id/number_Two"
            android:layout_marginLeft="460dp" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/ToTal_Amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="24sp"
            android:layout_below="@id/ToTal"
            android:layout_marginLeft="460dp" />




    </RelativeLayout>

    <LinearLayout
        android:padding="10dp"
        android:background="#9932CC"
        android:layout_width="match_parent"
        android:layout_below="@+id/screen"
        android:layout_height="wrap_content"
        android:id="@+id/linear_butns">

        <Button
            android:id="@+id/Add"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Add Coofe"
            android:onClick="Add"/>
        <Button
            android:id="@+id/Subtract"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Subtract"
            android:onClick="Subtract"/>
    </LinearLayout>
    <LinearLayout
        android:background="#9932CC"
        android:layout_width="match_parent"
        android:layout_below="@+id/linear_butns"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">


        <Button
            android:onClick="Get_oder"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Get Total"
            android:textSize="29sp"/>
    </LinearLayout>

</RelativeLayout>
